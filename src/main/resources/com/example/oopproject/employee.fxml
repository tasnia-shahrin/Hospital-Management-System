<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopproject.EmployeeController">
   <children>
      <Label layoutX="30.0" layoutY="48.0" text="ID">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="243.0" layoutY="48.0" text="Name">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <TextField fx:id="employeeID" layoutX="61.0" layoutY="46.0" promptText="employeeID" />
      <TextField fx:id="employeeName" layoutX="300.0" layoutY="46.0" promptText="employeeName" />
      <Button fx:id="home" layoutX="412.0" layoutY="331.0" mnemonicParsing="false" onAction="#goHome" text="Home" textFill="#ee1616">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
      <Label layoutX="21.0" layoutY="91.0" text="Designation">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="designation" layoutX="107.0" layoutY="89.0" promptText="designation" />
      <TableView fx:id="tableview" layoutX="52.0" layoutY="143.0" prefHeight="200.0" prefWidth="233.0">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="nameCol" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="dCol" prefWidth="75.0" text="Designation" />
        </columns>
      </TableView>
      <Button fx:id="add" layoutX="323.0" layoutY="88.0" mnemonicParsing="false" onAction="#addInfo" text="Add">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button fx:id="showlist" layoutX="400.0" layoutY="88.0" mnemonicParsing="false" onAction="#view" text="ShowList">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Label fx:id="employeeInfo" layoutX="201.0" layoutY="14.0" text="Employee Information" textFill="#c90b0b">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
