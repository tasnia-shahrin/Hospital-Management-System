<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopproject.DoctorController">
   <children>
      <Label layoutX="44.0" layoutY="71.0" text="ID">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="30.0" layoutY="112.0" text="Name">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="doctorInfo" layoutX="205.0" layoutY="14.0" text="Doctor's Information" textFill="#0a475e">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="doctorID" layoutX="75.0" layoutY="71.0" promptText="id" />
      <TextField fx:id="doctorName" layoutX="93.0" layoutY="112.0" promptText="name" />
      <Button fx:id="home" layoutX="452.0" layoutY="332.0" mnemonicParsing="false" onAction="#goHome" text="Home" textFill="#971111">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Label layoutX="264.0" layoutY="71.0" text="Speciality">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="speciality" layoutX="358.0" layoutY="71.0" promptText="speciality" />
      <Button fx:id="add" layoutX="301.0" layoutY="122.0" mnemonicParsing="false" onAction="#addInfo" prefHeight="31.0" prefWidth="85.0" text="Add">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <TableView fx:id="tableView" layoutX="32.0" layoutY="167.0" prefHeight="200.0" prefWidth="360.0">
        <columns>
          <TableColumn fx:id="nameCol" prefWidth="112.0" text="Name" />
          <TableColumn fx:id="idCol" prefWidth="111.0" text="ID" />
            <TableColumn fx:id="designationCol" prefWidth="136.0" text="Speciality" />
        </columns>
      </TableView>
      <Button fx:id="showlist" layoutX="433.0" layoutY="122.0" mnemonicParsing="false" onAction="#view" text="ShowList">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
